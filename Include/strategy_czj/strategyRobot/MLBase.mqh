class CMLBase
  {
protected:
   double            alpha[];
   double            x[];
public:
                     CMLBase(void){};
                    ~CMLBase(void){};
   double            OutPut();
   void              SetAlpha(double &a[]);
  };
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
double CMLBase::OutPut(void)
  {
   double sum=0;
   for(int i=0;i<ArraySize(alpha);i++) sum+=alpha[i]*x[i];
   return (exp(sum)-exp(-sum))/(exp(sum)+exp(-sum));
  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
void CMLBase::SetAlpha(double &a[])
  {
   ArrayCopy(alpha,a);
  }
